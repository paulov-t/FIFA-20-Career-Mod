<objectives>
  <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ ALL TEAMS ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  <!-- SIGN 1 PLAYER TO ANY POSITION - AFFECTS ALL TEAMS -->
  <objective type="building_a_foundation" score="100">
    <duration min="1" max="1"/>
    <conditions non_mandatory_max_fail="0">
      <condition type="sign_youth_players" mandatory="true" arguments="2">
        <argument name="num_players" value="1"/>
        <!-- num players to sign -->
        <argument name="area" value="0"/>
        <!-- played area 0=ANY, 1=GK, 2=DEF, 3=MID, 4=FW -->
      </condition>
    </conditions>
    <preconditions>
      <precondition type="category_rating" arguments="3">
        <argument name="category" value="4"/>
        <!-- category id 0=Domestic, 1=Regional, 2=popularity, 3=Profitability, 4=Youth -->
        <argument name="rating" value="10"/>
        <!-- 0 = greater or equal to, 1 = less or equal to, 2 = equal -->
        <argument name="op" value="1"/>
      </precondition>
      <precondition type="youth_acad_size" arguments="2">
        <!-- operation 0=greater, 1=less, 2=equal -->
        <argument name="op" value="1"/>
        <!-- squad size to compare to -->
        <argument name="size" value="20"/>
      </precondition>
    </preconditions>
    <expected_progress>
      <progress type="interval" duration="1">
        <entry checkpoint="-5" value="0"/>
        <entry checkpoint="9" year="0" value="0"/>
        <entry checkpoint="-6" value="100"/>
      </progress>
    </expected_progress>
  </objective>
  <!-- SIGN 1 PLAYER AND PLAY IN 3 GAMES - AFFECTS ALL TEAMS -->
  <objective type="cameo_appearance" score="100">
    <duration min="1" max="1"/>
    <conditions non_mandatory_max_fail="0">
      <condition type="sign_youth_and_play" mandatory="true" arguments="2">
        <!-- num players to sign and play -->
        <argument name="num_players" value="1"/>
        <!-- number of games to play in -->
        <argument name="games" value="3"/>
      </condition>
    </conditions>
    <preconditions>
      <precondition type="category_rating" arguments="3">
        <argument name="category" value="4"/>
        <!-- category id 0=Domestic, 1=Regional, 2=popularity, 3=Profitability, 4=Youth -->
        <argument name="rating" value="10"/>
        <!-- minimum rating -->
        <argument name="op" value="1"/>
        <!-- 0 = greater or equal to, 1 = less or equal to, 2 = equal -->
      </precondition>
    </preconditions>
    <expected_progress>
      <progress type="interval" duration="1">
        <entry checkpoint="-5" value="0"/>
        <entry checkpoint="9" year="0" value="0"/>
        <entry checkpoint="-6" value="100"/>
      </progress>
    </expected_progress>
  </objective>
  <!-- SIGN 1 YOUTH PLAYER AND PLAY NEXT SEASON 10% (4-5) GAMES - AFFECTS ALL TEAMS -->
  <objective type="home_grown_1" score="100">
    <duration min="2" max="2"/>
    <conditions non_mandatory_max_fail="0">
      <condition type="sign_youth_and_play_next_season" mandatory="true" arguments="2">
        <!-- num players to sign and and play -->
        <argument name="num_players" value="1"/>
        <!-- minimum percentage of total games in the next season to play -->
        <argument name="games_percent" value="10"/>
      </condition>
    </conditions>
    <preconditions>
      <precondition type="category_rating" arguments="3">
        <!-- category id 0=Domestic, 1=Regional, 2=popularity, 3=Profitability, 4=Youth -->
        <argument name="category" value="4"/>
        <argument name="rating" value="10"/>
        <!-- minimum rating -->
        <argument name="op" value="1"/>
        <!-- 0 = greater or equal to, 1 = less or equal to, 2 = equal -->
      </precondition>
    </preconditions>
    <expected_progress>
      <progress type="interval" duration="2">
        <entry checkpoint="-5" value="0"/>
        <entry checkpoint="50" year="0" value="0"/>
        <!-- 50% of first year -->
        <entry checkpoint="100" year="0" value="5"/>
        <!-- end of first year -->
        <entry checkpoint="10" year="1" value="10"/>
        <!-- 10% of second year, we don't expect anything extra from last season -->
        <entry checkpoint="-6" value="100"/>
      </progress>
    </expected_progress>
  </objective>
  
  
</objectives>